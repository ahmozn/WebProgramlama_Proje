@model webProgProje.Models.Randevu
@{
    
    //ANADALA GÖRE DOKTOR GETİRMEK İÇİN ONCHANGE YAZMAM LAZIM


    List<Doktor> OnSelect()
    {
        
    }
}


<h1>RandevuEkle</h1>

<h4>Randevu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RandevuEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RandevuDate" class="control-label"></label>
                <input asp-for="RandevuDate" class="form-control" />
                <span asp-validation-for="RandevuDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RandevuTime" class="control-label"></label>
                <input asp-for="RandevuTime" class="form-control" />
                <span asp-validation-for="RandevuTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Durum" value="true"/>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="AnadalID" class="control-label"></label>
                <select asp-for="AnadalID" class="form-control">
                    <option value="">Anadal Seçiniz...</option>
                    @foreach (var x in Model.AnadalList)
                    {
                        if (x != null)
                        {
                            <option value="@x.AnadalID">@x.AnadalAd.ToUpper()</option>
                        }
                        else
                        {
                            <option value="0">KAYIT BULUNAMADI</option>
                        }
                    }
                </select>
                <span asp-validation-for="AnadalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoktorID" class="control-label"></label>
                <select asp-for="DoktorID" class ="form-control" onchange="@OnSelect">
                    <option value="">Doktor Seçiniz...</option>
                    
                    @foreach(var x in Model.DoktorList)
                    {
                        if(x != null)
                        { 
                            if (x.AnadalID ==Html.ValueFor("AnadalID"))
                            {
                                <option value="@((int)x.DoktorID)">@x.DoktorDerece.ToUpper() &nbsp 
                                        @x.Kullanici.Ad.ToUpper() &nbsp @x.Kullanici.Soyad.ToUpper()</option>
                            }
                        }
                        else
                        {
                            <option value="0">KAYIT BULUNAMADI</option>
                        }
                    }
                </select>
                <span asp-validation-for="DoktorID" class="text-danger"></span>
            </div>
           
            <div class="form-group" hidden>
                <label asp-for="HastaID" class="control-label"></label>
                <select asp-for="HastaID" class ="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
