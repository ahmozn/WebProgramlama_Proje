 @model webProgProje.Models.Randevu


<h1>Randevu Sil</h1>
<hr />
<h3>Silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Randevu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tarih
        </dt>
        <dd class = "col-sm-10">
            @Model.RandevuDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            Saat
        </dt>
        <dd class = "col-sm-10">
            @Model.RandevuTime.ToShortTimeString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Durum)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Durum == true)
            {
                <p style="color:green">Aktif</p>
            }
            else
            {
                <p style="color:red">Aktif değil</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Doktor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doktor.Kullanici.Ad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Anadal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Anadal.AnadalAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hasta)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Hasta is null)
            {
                <p>Randevuya ait hasta bulunmuyor</p>
            }
            else
            {
                @Html.DisplayFor(model => model.Hasta.Kullanici.TC)
            }
        </dd>
    </dl>
    <hr />
    <form asp-action="RandevuSil">
        <input type="hidden" asp-for="RandevuID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="RandevuListele">Randevulara dön</a>
    </form>
</div>


