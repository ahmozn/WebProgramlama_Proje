@model IEnumerable<webProgProje.Models.Kullanici>

@{
    ViewData["Title"] = "KullaniciListele";
}

<h1>KullaniciListele</h1>

<p>
    <a asp-action="KisiEklePage"><button class="btn btn-primary">Yeni kayıt ekle</button></a>
    <a asp-action="DoktorListele"><button class="btn btn-primary">Doktorlar</button></a>
    <a asp-action="HastaListele"><button class="btn btn-primary">Hastalar</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KullaniciTipi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KullaniciTipi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @if (Model.Where(x => x.KullaniciTipi == "doktor") is null)
                    {
                        <a asp-action="DoktorDuzenle" asp-route-id="@item.Id">Bilgileri Düzenle</a>  
                        <a asp-action="DoktorDetay" asp-route-id="@item.Id">Detayları İncele</a>
                        <a asp-action="DoktorSil" asp-route-id="@item.Id">Kaydı Sil</a>
                    }
                    else
                    {
                        <a asp-action="HastaDuzenle" asp-route-id="@item.Id">Bilgileri Düzenle</a>
                        <a asp-action="HastaDetay" asp-route-id="@item.Id">Detayları İncele</a>
                        <a asp-action="HastaSil" asp-route-id="@item.Id">Kaydı Sil</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
