@model IEnumerable<webProgProje.Models.Kullanici>

@{
    ViewData["Title"] = "KullaniciListele";
}

<h1>KullaniciListele</h1>

<p>
    <a asp-action="DoktorEkle"><button class="btn btn-primary">+Yeni kayıt ekle</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KullaniciTipi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doktor.Anadal.AnadalAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doktor.DoktorDerece)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KullaniciTipi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doktor.Anadal.AnadalAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doktor.DoktorDerece)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="DoktorDuzenle" asp-route-id="@item.TC">Bilgileri Düzenle</a> |
                    <a asp-action="DoktorDetay" asp-route-id="@item.TC">Detayları İncele</a> |
                    <a asp-action="DoktorSil" asp-route-id="@item.TC">Kaydı Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
