@model webProgProje.Models.Kullanici

@{
    ViewData["Title"] = "Login";
}
@if(ViewData["hata"] is not null)
{
    <div class="alert alert-danger">@ViewData["hata"]</div>
}
@if(ViewData["msj"] is not null)
{
    <div class="alert alert-danger">@ViewData["msj"]</div>
}
<h1>Giriş Yap</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TC" class="control-label"></label>
                <input asp-for="TC" class="form-control" />
                <span asp-validation-for="TC" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sifre" class="control-label"></label>
                <input type="password" asp-for="Sifre" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
                <p>ya da</p>
                <a asp-action="Signup"><button type="button" class="btn btn-secondary">Kaydol</button></a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Anasayfa">Anasayfaya dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
