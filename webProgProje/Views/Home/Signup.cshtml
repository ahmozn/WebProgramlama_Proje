@model webProgProje.Models.Kullanici

@if(ViewData["signup"]is not null)
{
    <div class="alert alert-danger">@ViewData["signup"]</div>
}


<h1>Kaydol</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TC" class="control-label">TC kimlik no:</label>
                <input asp-for="TC" class="form-control" />
                <span asp-validation-for="TC" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="KullaniciTipi" class="control-label"></label>
                <input asp-for="KullaniciTipi" class="form-control" value="hasta"/>
                <span asp-validation-for="KullaniciTipi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label">Adınız:</label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label">Soyadınız:</label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label">Telefon numaranız(05xxxxxxxxx):</label>
                <input asp-for="Telefon" class="form-control" value="05"/>
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email adresi:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label">Şifre:</label>
                <input type="password" asp-for="Sifre" class="form-control" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Kaydı Tamamla" class="btn btn-primary" />
                <p>ya da</p>
                <a asp-action="LoginPage"><button type="button" class="btn btn-secondary">Giriş Yap</button></a>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Anasayfa">Anasayfaya Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
