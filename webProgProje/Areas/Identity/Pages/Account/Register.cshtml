@page
@model RegisterModel

@if (TempData["registerPhoneError"]is not null)
{
    <h3 class="text-danger">@TempData["registerPhoneError"]</h3>
}
<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Kaydol</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.TC" class="form-control" aria-required="true" />
                <label asp-for="Input.TC"></label>
                <span asp-validation-for="Input.TC" class="text-danger"></span>
            </div>
            <div class="form-floating" hidden>
                <input asp-for="Input.KullaniciTipi" class="form-control" aria-required="true" value="hasta"/>
                <label asp-for="Input.KullaniciTipi"></label>
                <span asp-validation-for="Input.KullaniciTipi" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Ad" class="form-control" aria-required="true" />
                <label asp-for="Input.Ad"></label>
                <span asp-validation-for="Input.Ad" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Soyad" class="form-control" aria-required="true" />
                <label asp-for="Input.Soyad"></label>
                <span asp-validation-for="Input.Soyad" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Telefon" class="form-control" aria-required="true" />
                <label asp-for="Input.Telefon"></label>
                <span asp-validation-for="Input.Telefon" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Sifre" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Sifre"></label>
                <span asp-validation-for="Input.Sifre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.SifreOnay" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.SifreOnay"></label>
                <span asp-validation-for="Input.SifreOnay" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
